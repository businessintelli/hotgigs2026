# Application
APP_NAME=HR Automation Platform
DEBUG=False
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+asyncpg://hr_user:hr_password@localhost:5432/hr_platform
# For SQLAlchemy sync operations if needed
DATABASE_SYNC_URL=postgresql://hr_user:hr_password@localhost:5432/hr_platform

# Redis
REDIS_URL=redis://localhost:6379/0

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672//
RABBITMQ_QUEUE_PREFIX=hr_platform

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=30

# AWS S3
AWS_S3_BUCKET=hr-platform-bucket
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret

# External APIs
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
SENDGRID_API_KEY=your-sendgrid-api-key

# Email Configuration
SENDGRID_FROM_EMAIL=noreply@hrplatform.com
SENDGRID_FROM_NAME=HR Platform

# Matching Configuration
MATCHING_SKILL_WEIGHT=0.35
MATCHING_EXPERIENCE_WEIGHT=0.25
MATCHING_EDUCATION_WEIGHT=0.15
MATCHING_LOCATION_WEIGHT=0.10
MATCHING_RATE_WEIGHT=0.10
MATCHING_AVAILABILITY_WEIGHT=0.05

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Feature Flags
ENABLE_AI_PARSING=true
ENABLE_AUTO_MATCHING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SUPPLIER_DISTRIBUTION=true
