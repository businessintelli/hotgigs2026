{
  "name": "hr-platform-mobile",
  "version": "1.0.0",
  "description": "HR Platform Mobile App - iOS & Android",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace HRPlatform.xcworkspace -scheme HRPlatform -configuration Release"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.73.0",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/stack": "^6.3.19",
    "@tanstack/react-query": "^5.25.0",
    "zustand": "^4.4.6",
    "axios": "^1.6.2",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "react-native-reanimated": "^3.5.0",
    "react-native-gesture-handler": "^2.14.0",
    "react-native-safe-area-context": "^4.8.0",
    "react-native-screens": "^3.27.0",
    "react-native-vector-icons": "^10.0.0",
    "date-fns": "^2.30.0",
    "react-native-paper": "^5.11.4",
    "@react-native-firebase/app": "^18.7.0",
    "@react-native-firebase/messaging": "^18.7.0",
    "react-native-biometric-promise": "^2.2.2",
    "react-native-haptic-feedback": "^2.2.0",
    "react-native-svg": "^13.14.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-native": "^0.73.0",
    "typescript": "^5.2.2",
    "@testing-library/react-native": "^12.2.0",
    "jest": "^29.7.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.51.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0"
  }
}
